def timeConversion(s):
    # Write your code here
    h=int(s[0:2])
    if s[8]=='A':
        if h==12:
            return '00'+s[2:8]
        else:
            return s[0:8]
    if s[8]=='P':
        if h==12:
            return s[0:8]
        else:
            h=h+12
            return str(h)+s[2:8]

if __name__ == '__main__':
    fptr = open(os.environ['OUTPUT_PATH'], 'w')

    s = input()

    result = timeConversion(s)

    fptr.write(result + '\n')

    fptr.close()
